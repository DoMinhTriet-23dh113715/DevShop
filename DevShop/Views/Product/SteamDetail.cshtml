@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<style>
    .prodContainer .product-item a {
        text-decoration: none;
        color: black;
    }

    .product-item mark {
        background-color: red;
        border-radius: 4px;
        color: whitesmoke;
    }

    .product-item img {
        width: 100%;
        border-radius: 4px;
    }

    .product-item {
        width: 100%;
        flex: 1;
    }

    .prodDescription {
        font: arial;
        font-size: 15px;
    }

    .prodPrice s {
        color: lightgrey;
    }

    .prodSteam {
        display: flex;
        justify-content: space-between;
        gap: 50px;
    }

        .prodSteam img {
            height: 50%;
        }

    #gameSteam {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        #gameSteam h2 {
            font: arial;
            font-size: 2rem;
            margin-bottom: 10px;
        }
    .prodSteam .product-item a {
        text-decoration: none;
        color: black;
    }

        .prodSteam .product-item a:hover {
            color: blue;
        }
</style>
<div id="gameSteam">
    <div>
        <h2 class="title">Game trên Steam</h2>
    </div>
</div>
<div class="prodSteam">
    <div class="product-item">
        <a href="~/Product/ProductDetail">
            <img src="../Content/img/sp1.png" class="img-fluid" alt="Product 1" onclick="goToProductDetail(1)" />
            <p class="prodDescription">
                Black Myth: Wukong - Thuê game (1 ngày)
            </p>
            <p class="prodPrice">
                <b>40.000đ</b> <s>1.299.000đ</s> <mark>-97%</mark>
            </p>
        </a>
    </div>
    <div class="product-item">
        <a href="~/Product/ProductDetail5">
            <img src="../Content/img/sp1.2.png" class="img-fluid" alt="Product 1.2" onclick="goToProductDetail(1.2)" />
            <p class="prodDescription">
                Random Code Steam
            </p>
            <p class="prodPrice">
                <b>
                    9.000đ
                </b>
                <s>
                    20.000đ
                </s>
                <mark>-55%</mark>
            </p>
        </a>
    </div>
    <div class="product-item">
        <a href="~/Product/ProductDetail6">
            <img src="../Content/img/sp1.3.jpg" class="img-fluid" alt="Product 1.3" onclick="goToProductDetail(1.3)" />
            <p class="prodDescription">
                GTA Grand Theft Auto V: Premium Online Edition - CD Key Rockstar
            </p>
            <p class="prodPrice">
                <b>490.000đ</b> <s>650.000đ</s> <mark>-25%</mark>
            </p>
        </a>
    </div>
    <div class="product-item">
        <a href="~/Product/ProductDetail7">
            <img src="../Content/img/sp1.4.jpg" class="img-fluid" alt="Product 1.4" onclick="goToProductDetail(1.4)" />
            <p class="prodDescription">
                Overcooked 2 - Code kích hoạt
            </p>
            <p class="prodPrice">
                <b>
                    179.000đ
                </b>
                <s>
                    300.000đ
                </s>
                <mark>-40%</mark>
            </p>
        </a>

    </div>
</div>


