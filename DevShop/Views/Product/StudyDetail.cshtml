@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<style>
    .prodContainer .product-item a {
        text-decoration: none;
        color: black;
    }

    .product-item mark {
        background-color: red;
        border-radius: 4px;
        color: whitesmoke;
    }

    .product-item img {
        width: 100%;
        border-radius: 4px;
    }

    .product-item {
        width: 100%;
        flex: 1;
    }

    .prodDescription {
        font: arial;
        font-size: 15px;
    }

    .prodPrice s {
        color: lightgrey;
    }

    .productStudy {
        display: flex;
        justify-content: space-between;
        gap: 50px;
    }

        .productStudy img {
            height: 50%;
        }

    #prodStudy {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        #prodStudy h2 {
            font: arial;
            font-size: 2rem;
            margin-bottom: 10px;
        }
    .productStudy .product-item a {
        text-decoration: none;
        color: black;
    }

        .productStudy .product-item a:hover {
            color: blue;
        }
</style>
